# SkillConnect Production Environment Variables (Backend)
# Place these into your hosting platform's environment settings (Render, Railway, etc.)

NODE_ENV=production
PORT=3000

# Database (Neon/Supabase)
DB_HOST=your-db-host.neon.tech
DB_PORT=5432
DB_NAME=labor_migration_platform
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_SSL=true
DB_MAX_CONNECTIONS=10

# Redis (Upstash)
REDIS_HOST=your-upstash-host.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Security (CRITICAL: Change these!)
JWT_SECRET=generate-a-long-random-string-here
JWT_REFRESH_SECRET=generate-another-long-random-string-here
CORS_ORIGIN=https://skillconnect.my,https://skillconnect-frontend.vercel.app

# Stripe
STRIPE_ENABLED=true
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# AWS (S3 for Document Uploads)
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
AWS_S3_BUCKET=skillconnect-docs-prod

# SMTP (Email Notifications)
SMTP_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@skillconnect.my
